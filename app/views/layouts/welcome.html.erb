<!DOCTYPE html>
<html>
<head>
  <title>Jex</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'fullpage.js/jquery.fullPage.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %> <%= action_name %>" data-controller="<%= controller.controller_name %>" data-action="<%= action_name %>">
<%= render "layouts/messages" %>
<header class="topbar">
  <h1 class="logo"></h1>
  <div class="absolute-right topbar-access-links">
    <% if user_signed_in? %>
      <%= link_to 'Salir', destroy_user_session_path, :method=>'delete' %>
    <% else %>
      <%= link_to 'Entrar', new_user_session_path %> · 
      <%= link_to 'Regístrate', new_user_registration_path %>
    <% end %>
  </div>
</header>
<%= yield %>

</body>
</html>