<!DOCTYPE html>
<html>
<head>
  <title>Jex</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %> <%= action_name %>" data-controller="<%= controller.controller_name %>" data-action="<%= action_name %>">
<%= render "layouts/messages" %>
<header class="topbar">
  <h1 class="logo"></h1>
  <div class="absolute-right topbar-access-links">
    <%= link_to 'Sign in', new_user_session_path %>
    <%= link_to 'Sign up', new_user_registration_path %>
  </div>
</header>
<%= yield %>

</body>
</html>