<p id="notice"><%= notice %></p>

<h1>Listing Payment Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Account</th>
      <th>Regularity</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Amount</th>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_schedules.each do |payment_schedule| %>
      <tr>
        <td><%= payment_schedule.account %></td>
        <td><%= payment_schedule.regularity %></td>
        <td><%= payment_schedule.start_date %></td>
        <td><%= payment_schedule.end_date %></td>
        <td><%= payment_schedule.amount %></td>
        <td><%= payment_schedule.name %></td>
        <td><%= payment_schedule.user %></td>
        <td><%= link_to 'Show', payment_schedule %></td>
        <td><%= link_to 'Edit', edit_payment_schedule_path(payment_schedule) %></td>
        <td><%= link_to 'Destroy', payment_schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

